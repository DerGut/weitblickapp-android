<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <org.weitblicker.weitblickapp.OpenSansTextView
        android:id="@+id/fragment_join_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_header_wrapper"
        android:textColor="@color/wb_darkgrey"
        android:padding="10dp"
        tools:text="abstract"
        android:text="Vorname"/>

    <EditText
        android:id="@+id/fragment_join_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_join_name_label"
        android:textColor="@color/wb_darkgrey"
        android:text="Dies ist Text..."/>

</RelativeLayout>
</ScrollView>